<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChiTietSanPhamActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_chitietsp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccent"
        android:title="Chi tiết sản phẩm"
        app:titleTextColor="@android:color/black"
        app:title="Chi tiết sản phẩm"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_chitietsp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/taytrang_loreal"
        app:layout_constraintTop_toBottomOf="@id/toolbar_chitietsp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Hình ảnh của sản phẩm Tẩy trang Loreal"/>

    <TextView
        android:id="@+id/tv_chitietsp_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tẩy trang Loreal"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/img_chitietsp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tv_chitietsp_gia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="170000"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_chitietsp_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tv_chitietsp_mota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Micellar Water 3-in-1 Refreshing Even For Sensitive Skin"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_chitietsp_gia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:lineSpacingExtra="4dp"/>

    <Button
        android:id="@+id/btn_themvaogiohang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorAccent"
        android:text="Thêm vào giỏ hàng"
        app:layout_constraintTop_toBottomOf="@id/tv_chitietsp_mota"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
